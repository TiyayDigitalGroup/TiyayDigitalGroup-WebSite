---
import ImgDiseñoWeb from "@/assets/ImgDisenoWeb.png";
import ImgLandingPage from "@/assets/ImgLandingPage.png";
import ImgEcommerce from "@/assets/ImgComercioElectronico.png";
import Image from "astro/components/Image.astro";

const servicios = [
  {
    title: "Desarrollo de Sitios Web",
    img: ImgDiseñoWeb,
    descripcion:
      "Diseñamos sitios web de alto impacto que inspiran confianza y ponen en valor lo mejor de tu empresa",
    link: "#",
  },
  {
    title: "Landing Page",
    img: ImgLandingPage,
    descripcion:
      "Creamos páginas de aterrizaje que captan la atención, recopilan prospectos y maximizan tus conversiones.",
    link: "#",
  },
  {
    title: "Comercio Electronico",
    img: ImgEcommerce,
    descripcion:
      "Creamos tu tienda digital moderna, con pasarela de pago integrada y procesos de venta automatizados.",
    link: "#",
  },
];
---

<div class="flex flex-col items-center gap-8">
  <div>
    <h1 class="max-md:text-3xl text-4xl font-bold text-center">¿Qué necesita tu negocio?</h1>
    <p class="mt-3 text-center">
      Descubre nuestras soluciones y herramientas digitales para impulsar el
      crecimiento de tu empresa.
    </p>
  </div>

  <section class="w-full flex gap-10 flex-wrap justify-center">
    {
      servicios.map((servicio) => (
        <div class="bg-[#c0f6f827] rounded-xl flex flex-col justify-center gap-5 px-7 py-6 shadow-xl hover:scale-105 transition-all ease-in-out duration-300 cursor-pointer max-w-sm">
          <Image
            src={servicio.img}
            alt="Imagen de Diseño Web"
            class="w-60 mx-auto"
          />
          <h2 class="text-2xl font-bold font-poppins">{servicio.title}</h2>
          <p class="text-black/50 text-sm">{servicio.descripcion}</p>
          <a
            href={servicio.link}
            class="py-2 px-4 bg-black text-white rounded-r-full font-bold w-fit hover:bg-amber-400 transition-all duration-300 capitalize"
          >
            ver servicios
          </a>
        </div>
      ))
    }
  </section>
</div>
